{
  "compilerOptions": {
    "declaration": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "es5",
      "es2015.promise"
    ],
    "sourceMap": true,
    "strictNullChecks": true,
    "noResolve": true
  },
  "exclude": [
    "node_modules"
  ],
  "atom": {
    "formatOnSave": true
  }
}